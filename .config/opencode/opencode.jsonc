{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoupdate": true,

  // "plugin": ["oh-my-opencode@latest"],

  "provider": {
    "ollama": {
      "name": "Ollama (local)",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1",
      },

      "models": {
        "deepseek-coder-v2:lite": {
          "name": "DeepSeek Coder v2 Lite",
          "limit": {
            "context": 32768,
            "output": 8192,
          },
          "modalities": { "input": ["text"], "output": ["text"] },
          "notes": "Ultra-fast local coding model. Best for explanations, quick edits, and navigation.",
        },

        "qwen2.5-coder:14b": {
          "name": "Qwen 2.5 Coder 14B",
          "limit": {
            "context": 32768,
            "output": 16384,
          },
          "modalities": { "input": ["text"], "output": ["text"] },
          "notes": "Balanced default model for day-to-day feature work.",
        },

        "qwen2.5-coder:32b": {
          "name": "Qwen 2.5 Coder 32B",
          "limit": {
            "context": 32768,
            "output": 16384,
          },
          "modalities": { "input": ["text"], "output": ["text"] },
          "notes": "Primary heavy refactor and test generation model.",
        },

        "llama3.1:70b": {
          "name": "LLaMA 3.1 70B",
          "limit": {
            "context": 32768,
            "output": 16384,
          },
          "modalities": { "input": ["text"], "output": ["text"] },
          "notes": "Architecture, reviews, infra, and repo-level reasoning.",
        },

        "lfm2.5-thinking:latest": {
          "name": "LFM 2.5 Thinking",
          "limit": {
            "context": 32768,
            "output": 8192,
          },
          "modalities": { "input": ["text"], "output": ["text"] },
          "notes": "Planning and reasoning only.",
        },
      },
    },
  },

  "model": "ollama/qwen2.5-coder:14b",
  "small_model": "ollama/deepseek-coder-v2:lite",

  "command": {
    "explain": {
      "model": "ollama/deepseek-coder-v2:lite",
      "template": "Explain the following code or file clearly and concisely. Focus on intent, behavior, and important details.\n\n{{input}}",
    },

    "refactor": {
      "model": "ollama/qwen2.5-coder:32b",
      "template": "Refactor the following code to improve clarity, structure, and maintainability without changing behavior. Explain the changes briefly.\n\n{{input}}",
    },

    "add-tests": {
      "model": "ollama/qwen2.5-coder:32b",
      "template": "Generate meaningful tests matching the project's stack. Focus on realistic and valuable coverage.\n\n{{input}}",
    },

    "review": {
      "model": "ollama/llama3.1:70b",
      "template": "Review the following changes as in a merge request. Focus on risks, maintainability, and improvements.\n\n{{input}}",
    },

    "summarize": {
      "model": "ollama/llama3.1:70b",
      "template": "Summarize the following content and explain how it fits into the project.\n\n{{input}}",
    },
  },

  "agent": {
    "coder": {
      "model": "ollama/qwen2.5-coder:14b",
    },
    "reader": {
      "model": "ollama/deepseek-coder-v2:lite",
    },
    "refactor": {
      "model": "ollama/qwen2.5-coder:32b",
    },
    "architect": {
      "model": "ollama/llama3.1:70b",
    },
    "reviewer": {
      "model": "ollama/llama3.1:70b",
    },
  },

  "disabled_providers": ["openai"],
}

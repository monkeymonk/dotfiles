{
  "strict types": {
    "prefix": "strict",
    "description": "Add strict types declaration",
    "body": ["declare(strict_types=1);"]
  },
  "inv": {
    "prefix": "inv",
    "description": "Create PHP __invoke method",
    "body": [
      "public function __invoke(${1}): ${2:void}",
      "{",
      "    ${3}",
      "}",
      ""
    ]
  },
  "Public Method": {
    "prefix": "met",
    "body": [
      "public function ${1:methodName}(${2:params}): ${3:void}",
      "{",
      "\t${0}",
      "}"
    ],
    "description": "public method"
  },
  "Protected Method": {
    "prefix": "pmet",
    "body": [
      "protected function ${1:methodName}(${2:params}): ${3:void}",
      "{",
      "\t${0}",
      "}"
    ],
    "description": "protected method"
  },
  "Private Method": {
    "prefix": "pimet",
    "body": [
      "private function ${1:methodName}(${2:params}): ${3:void}",
      "{",
      "\t${0}",
      "}"
    ],
    "description": "private method"
  },
  "public static method": {
    "prefix": "pubsf",
    "body": [
      "public static function ${1:methodName}(${2:params}): ${3:void}",
      "{",
      "\t${0}",
      "}"
    ],
    "description": "Create a public static method"
  },
  "Insert this->": {
    "prefix": "th",
    "body": ["$this->${0}"],
    "description": "insert $this->"
  },
  "pest test (it) method": {
    "prefix": "it",
    "description": "Create a pest test",
    "body": [
      "it('${1}', function () {",
      "    // Arrange",
      "    ${0}",
      "",
      "    // Act",
      "",
      "    // Assert",
      "",
      "});"
    ]
  },
  "Match Statement": {
    "prefix": "match",
    "body": ["match(${1:expression}) {", "\t${0}", "};"],
    "description": "match statement"
  }
}
